{
  "eslint.experimental.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown",
    "astro"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.turbo": true,
    "**/.eslintcache": true,
    "**/*.tsbuildinfo": true,
    "**/packages/*/.prettierignore": true,
    "**/packages/*/tsconfig*.json": true,
    "**/packages/*/node_modules": true,
    "**/packages/*/dist": true,
    "pnpm-*.yaml": true
  }
}
